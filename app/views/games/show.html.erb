<%= @game.name%>

<table class="player">
  <thead>
    <tr class="users">
      <th>Players</th>
      <%@players.each do |p|%>
      <th><%= p.username%></th>
      <% end%>  
    </tr>
 </thead>   
    <tr>
    <th>Stock</th>
      <%@players.each do |p|%>
      <td class="score"><%= p.scores.find_by_game_id(@game.id).stocks%></td>
    <%end%>
    </tr>
    <tr>
	    <th>Bonds</th>
      <%@players.each do |p|%>
	      <td><%= p.scores.find_by_game_id(@game.id).bonds%></td>
	    <%end%>
    </tr>
    <tr>
      <th>Real Estate</th>
      <%@players.each do |p|%>
        <td><%= p.scores.find_by_game_id(@game.id).real_estates%></td>
      <%end%>
    </tr>
    <tr>
      <th>Commodities</th>
      <%@players.each do |p|%>
        <td><%= p.scores.find_by_game_id(@game.id).commodities%></td>
      <%end%>
    </tr>
    <tr>
      <th>Cash</th>
      <%@players.each do |p|%>
        <td><%= p.scores.find_by_game_id(@game.id).cash%></td>
      <%end%>
    </tr>      
    <th>Net</th>
      <%@players.each do |p|%>
        <td><%= p.scores.find_by_game_id(@game.id).net%></td>
      <%end%>
    </tr>

</table>    